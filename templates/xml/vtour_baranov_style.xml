<krpano version="1.0.8.15" title="Virtual Tour" onstart="startup();">

	<include url="actions.xml"/>
	<include url="skin/baranov_style_skin.xml"/>
	<include url="skin/projections-contextmenu.xml"/>

	<!-- set skin settings: bingmaps? gyro? -->
	<skin_settings bingmaps="[HAVEGPS]" bingmaps_key="" bingmaps_zoombuttons="false"
	               gyro="true"
	               thumbsopened="false"
	               tooltips_thumbs="true" tooltips_hotspots="true" tooltips_mapspots="true"
	               controlbar_offset="20"
	               />

	<!-- set optional skin logo url -->
	<layer name="skin_logo" 
		url="skin/logo.png" x="5" y="5" align="righttop" scale="1" onclick="openurl('http://sergeybaranov.ru', _blank);"
		onhover="showtext('Перейти на сайт', buttonstyle)"
	/>

	<action name="startup">
		if(startscene === null, copy(startscene,scene[0].name));
		loadscene(get(startscene), null, MERGE);

		addthumbs();
		qtvrcursor();
		sound_off();
	</action>

	[SCENES]

</krpano>
